<h1>Listing monthly_summaries</h1>

<table>
  <thead>
    <tr>
      <th>Year</th>
      <th>Month</th>
      <th>Begin at</th>
      <th>End at</th>
      <th>Carryover amount</th>
      <th>This month amount</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @monthly_summaries.each do |monthly_summary| %>
      <tr>
        <td><%= monthly_summary.year %></td>
        <td><%= monthly_summary.month %></td>
        <td><%= monthly_summary.begin_at %></td>
        <td><%= monthly_summary.end_at %></td>
        <td><%= monthly_summary.carryover_amount %></td>
        <td><%= monthly_summary.this_month_amount %></td>
        <td><%= monthly_summary.amount %></td>
        <td><%= link_to 'Show', monthly_summary %></td>
        <td><%= link_to 'Edit', edit_monthly_summary_path(monthly_summary) %></td>
        <td><%= link_to 'Destroy', monthly_summary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

